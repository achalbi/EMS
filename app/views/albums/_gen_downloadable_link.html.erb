
 <div id="modal_dlink" style="display:none;" >
  <div id="modal-from-dom2" class="modal hide fade in" style="display: block;width:700px;">
    <div class="modal-header">
      <a href="#" id="closeX" class="close">Ã—</a>
      <span style="font-size:20px;line-height: 2;">Download Link</span>
    </div>
    <div class="modal-body" style="max-height:300px;">
      <div class="row">
        <div class="span14 ui-front">
        	<% if @album.downloadlink.include? " , " %>
	        	<% cnt = 0 %>
	        	<% @album.downloadlink.split(", ").each do |a| %>
		        	<% cnt = cnt + 1 %>
		        		<ul class='users'>
		        			 <li class="center "><h4><%= link_to @album.title.to_s+" Part "+cnt.to_s, a  %></h4></li>
		        		</ul>	
		        <% end %>
		    <% else %>
		    	<ul class='users'>
		        	<li class="center "><h4><%= link_to @album.title, @album.downloadlink  %></h4></li>
		       </ul>
		    <% end %>
        </div>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">
$(function(){
  $('#modal_dlink').modal('show');
});
$("#closeX").click(function(){
  $('#modal_dlink').modal('hide');
  $('.modal-backdrop').remove();
});
</script>